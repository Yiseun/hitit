<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="hit">
        <class>
            hitit.hit.entity.Hit
        </class>
        <class>
            hitit.hit.entity.DailyHits
        </class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="nevertheless"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://127.0.0.1:3306/test"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
        </properties>
    </persistence-unit>
</persistence>